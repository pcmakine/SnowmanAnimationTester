<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SurfaceGameActivity">


    <com.example.snowmananimationtester.surfacegame.GameView
            android:id = "@+id/gameview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/hello_world" />

<!--    <com.example.snowmananimationtester.surfacegame.CustomSlider
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:max = "49"
            android:layout_marginBottom="15dp"
            android:layout_marginRight = "15dp"
            android:progress = "1"
            />-->

    <Button
            android:id="@+id/hit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hit"
            android:textStyle="bold"
            android:textSize = "30dp"
            android:layout_marginBottom="15dp"
            android:onClick = "setTextView"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/seekBar"
            />


    <TextView
            android:id="@+id/energyPlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize = "15sp"
            android:layout_toLeftOf="@+id/seekBar"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"/>

